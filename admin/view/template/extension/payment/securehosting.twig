{{ header }} {{ column_left }}
<div id="content">
    <div class="page-header">

        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-secure-hosting" data-toggle="tooltip"
                        title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}"
                   class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning  %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        {% if text_success  %}
        {#<div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ text_success }}#}
            {#<button type="button" class="close" data-dismiss="alert">&times;</button>#}
        {#</div>#}
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> Secure Hosting and Payments</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data"
                      id="form-secure-hosting" class="form-horizontal">

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_securehosting_status" class="form-control">
                                {% if payment_securehosting_status %})
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                                {%  else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_sort_order">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_securehosting_sort_order"
                                   value="{{ payment_securehosting_sort_order }}" size="1"
                                   class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_shreference">{{ entry_shreference }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_securehosting_shreference"
                                   value="{{ payment_securehosting_shreference }}" placeholder="SH200000"
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_checkcode">{{ entry_checkcode }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_securehosting_checkcode"
                                   value="{{ payment_securehosting_checkcode }}" placeholder=""
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_filename">{{ entry_filename }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_securehosting_filename"
                                   value="{{ payment_securehosting_filename }}" placeholder=""
                                   class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_securehosting_as">{{ entry_as }}</label>
                        <div class="col-sm-10">
                            <select name="payment_securehosting_as" class="form-control"
                                    onchange="this.form.payment_securehosting_as_phrase.disabled = this.value == '0';this.form.payment_securehosting_as_referrer.disabled = this.value == '0';">
                                {% if payment_securehosting_as %}
                                <option value="1" selected="selected">Yes</option>
                                <option value="0">No</option>
                                {% else %}
                                <option value="1">Yes</option>
                                <option value="0" selected="selected">No</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_as_phrase">{{ entry_as_phrase }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_securehosting_as_phrase" {% if not payment_securehosting_as %} disabled="disabled"{% endif %}
                                   value="{{ payment_securehosting_as_phrase }}" placeholder=""
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_as_referrer">{{ entry_as_referrer }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_securehosting_as_referrer" {% if not payment_securehosting_as %} disabled="disabled"{% endif %}
                                   value="{{ payment_securehosting_as_referrer }}" placeholder=""
                                   class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_test">{{ entry_test }}</label>
                        <div class="col-sm-10">
                            <select name="payment_securehosting_test" class="form-control">
                                {% if payment_securehosting_test %}
                                <option value="1" selected="selected">Yes</option>
                                <option value="0">No</option>
                                {% else %}
                                <option value="1">Yes</option>
                                <option value="0" selected="selected">No</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="payment_securehosting_geo_zone_id">{{ entry_geo_zone }}</label>
                        <div class="col-sm-10">
                            <select name="payment_securehosting_geo_zone_id" class="form-control">
                                <option value="0">{{ text_all_zones }}</option>
                                {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == payment_securehosting_geo_zone_id %}
                                    <option value="{{ geo_zone.geo_zone_id }}"
                                            selected="selected">{{ geo_zone.name }}</option>
                                    {% else %}
                                        <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="input-order-status">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_securehosting_order_status_id" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_securehosting_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}"
                                            selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
